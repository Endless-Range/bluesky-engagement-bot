# Bluesky Credentials (Required)
# 1. Create account at bsky.app
# 2. Go to Settings > App Passwords
# 3. Generate new app password
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_APP_PASSWORD=your_app_password_here

# Anthropic API Key (Required)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Bot Behavior
MANUAL_APPROVAL=true
WEBSITE_URL=https://yourwebsite.com
BOT_USERNAME=Bot_name_here

# Keywords to monitor (comma-separated)
KEYWORDS=keyword1,keyword2,keyword3,your keywords here

# Claude Model (Optional - uses latest Sonnet by default)
# CLAUDE_MODEL=claude-sonnet-4-20250514

# Slack Configuration (Optional)
# Get webhook from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# For interactive Slack approvals (Optional - Advanced)
# See SETUP.md for full setup guide
SLACK_SIGNING_SECRET=
SLACK_INTERACTIVE_MODE=false
SLACK_SERVER_PORT=3000

# Rate Limiting (Conservative defaults - Bluesky allows much higher)
# Bluesky API allows: 1,666/hour, 11,666/day
# These are set low to be respectful and avoid spam
MAX_REPLIES_PER_HOUR=20
MAX_REPLIES_PER_DAY=150
MIN_SECONDS_BETWEEN_REPLIES=120

# Quality Filters
MIN_FOLLOWERS_TO_REPLY=10
SKIP_VERIFIED_POLITICIANS=true
MAX_POST_AGE_HOURS=2
